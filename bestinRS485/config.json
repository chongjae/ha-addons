{
  "name": "BESTIN WallPad with RS485",
  "version": "1.2.0",
  "slug": "wallpad",
  "description": "BESTIN WallPad for Home Assistant",
  "arch": [
    "armhf",
    "armv7",
    "aarch64",
    "amd64",
    "i386"
  ],
  "map": [
    "share:rw"
  ],
  "url": "https://github.com/harwin1/bestinRS485",
  "startup": "application",
  "boot": "auto",
  "uart": true,
  "options": {
  "serial_sendDelay": 100,
  "socket_sendDelay": 70,
  "serial_maxRetry": 10,
  "socket_maxRetry": 50,
    "energy": {
      "rpiPort": "/dev/ttyUSB0",
      "windowPort": "COM0",
      "address": "192.168.0.x",
      "port": 8899
    }, 
    "control": {
      "rpiPort": "/dev/ttyUSB0",
      "windowPort": "COM0",
      "address": "192.168.0.x",
      "port": 8899
    },
    "smart": {
      "recv_rpiPort": "/dev/ttyUSB0",
      "recv_windowPort": "COM0",
      "send_rpiPort": "/dev/ttyUSB0",
      "send_windowPort": "COM0",
      "recv_addr": "192.168.0.x",
      "recv_port": 8899,
      "send_addr": "192.168.0.x",
      "send_port": 8899
    },
    "port": {
      "rpiPort": "/dev/ttyUSB0",
      "windowPort": "COM0",
      "address": "192.168.0.x",
      "port": 8899
    },
    "rs485": {
      "wallpad_type": "new",
      "ev_enable": "off",
      "energy_type": "socket",
      "ctrl_type": "socket",
      "recv_type": "serial",
      "send_type": "serial",
      "port_type": "socket"
    },
    "mqtt": {
      "broker": "192.168.0.x",
      "username": "id",
      "password": "pw",
      "port": 1883,
      "receiveDelay": 5000,
      "prefix": "homenet"
    }
  },
  "schema": {
  "serial_sendDelay": "int",
  "socket_sendDelay": "int",
  "serial_maxRetry": "int",
  "socket_maxRetry": "int",
    "energy": {
      "rpiPort": "str?",
      "windowPort": "str?",
      "address": "str?",
      "port": "int?"
    },
    "control": {
      "rpiPort": "str?",
      "windowPort": "str?",
      "address": "str?",
      "port": "int?"
    },
    "smart": {
      "recv_rpiPort": "str?",
      "recv_windowPort": "str?",
      "send_rpiPort": "str?",
      "send_windowPort": "str?",
      "recv_addr": "str?",
      "recv_port": "int?",
      "send_addr": "str?",
      "send_port": "int?"
    },
    "port": {
      "rpiPort": "str?",
      "windowPort": "str?",
      "address": "str?",
      "port": "int?"
    },
    "rs485": {
      "wallpad_type": "list(new|old)",
      "ev_enable": "list(on|off)",
      "energy_type": "list(serial|socket)",
      "ctrl_type": "list(serial|socket)",
      "recv_type": "list(serial|socket)",
      "send_type": "list(serial|socket)",
      "port_type": "list(serial|socket)"
    },
    "mqtt": {
      "broker": "str",
      "username": "str",
      "password": "str",
      "port": "int",
      "receiveDelay": "int",
      "prefix": "str"
    }
  }
}
