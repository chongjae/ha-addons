{
    "name": "HDC BESTIN WallPad RS485 Addon",
    "version": "1.6.0",
    "slug": "bestin_wallpad",
    "description": "현대산업개발 베스틴 월패드용 애드온입니다",
    "arch": [
      "armhf",
      "armv7",
      "aarch64",
      "amd64",
      "i386"
    ],
    "map": [
      "share:rw"
    ],
    "url": "https://github.com/harwin1/bestin-v1",
    "startup": "application",
    "boot": "auto",
    "uart": true,
    "options": {
      "sendDelay": 100,
      "maxRetry": 30,
      "server_interval": 60,
      "energy": {
        "type": "socket",
        "serName": "/dev/ttyUSB0",
        "address": "192.168.0.x",
        "port": 8899
      }, 
      "control": {
        "type": "socket",
        "serName": "/dev/ttyUSB0",
        "address": "192.168.0.x",
        "port": 8899
      },
      "smart1": {
        "type": "socket",
        "serName": "/dev/ttyUSB0",
        "address": "192.168.0.x",
        "port": 8899
      },
      "smart2": {
        "type": "socket",
        "serName": "/dev/ttyUSB0",
        "address": "192.168.0.x",
        "port": 8899
      },
      "ipark_server": {
        "server": "59.7.x.x",
        "username": "id",
        "password": "pw"
      },
      "mqtt": {
        "broker": "192.168.0.x",
        "username": "id",
        "password": "pw",
        "port": 1883,
        "receiveDelay": 5000
      }
    },
    "schema": {
    "sendDelay": "int",
    "maxRetry": "int",
    "server_interval": "int",
      "energy": {
        "type": "list(serial|socket)",
        "serName": "str?",
        "address": "str?",
        "port": "int?"
      },
      "control": {
        "type": "list(serial|socket)",
        "serName": "str?",
        "address": "str?",
        "port": "int?"
      },
      "smart1": {
        "type": "list(serial|socket)",
        "serName": "str?",
        "address": "str?",
        "port": "int?"
      },
      "smart2": {
        "type": "list(serial|socket)",
        "serName": "str?",
        "address": "str?",
        "port": "int?"
      },
      "ipark_server": {
        "server": "str",
        "username": "str",
        "password": "str"
      },
      "mqtt": {
        "broker": "str",
        "username": "str",
        "password": "str",
        "port": "int",
        "receiveDelay": "int"
      }
    }
}
  
