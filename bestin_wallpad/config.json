{
  "name": "HDC BESTIN WallPad RS485 Addon",
  "version": "1.0.0",
  "slug": "bestin_wallpad",
  "description": "현대산업개발 베스틴 월패드용 애드온입니다.",
  "arch": [
    "armhf",
    "armv7",
    "aarch64",
    "amd64",
    "i386"
  ],
  "map": [
    "share:rw"
  ],
  "url": "https://github.com/harwin1/bestin-v1",
  "startup": "application",
  "boot": "auto",
  "uart": true,
  "options": {
    "server_enable": true,
    "server_scan": 300,
    "rs485": {
      "retry_delay": 100,
      "retry_count": 20
    },
    "energy_port": {
      "type": "socket",
      "ser_path": "/dev/ttyUSB0",
      "address": "192.168.1.1",
      "port": 8899
    },
    "control_port": {
      "type": "socket",
      "ser_path": "/dev/ttyUSB0",
      "address": "192.168.1.1",
      "port": 8899
    },
    "ipark_server": {
      "address": "59.7.0.1",
      "username": "username",
      "password": "password"
    },
    "ipark_server_device": {
      "living_light": true,
      "vehicle": true,
      "delivery": true,
      "energy": false
    },
    "mqtt": {
      "broker": "192.168.1.1",
      "port": 1883,
      "username": "username",
      "password": "password",
      "prefix": "bestin",
      "discovery": true
    }
  },
  "schema": {
    "server_enable": "bool",
    "server_scan": "int(0,300)",
    "rs485": {
      "retry_delay": "int(0,300)",
      "retry_count": "int(0,50)",
    },
    "energy_port": {
      "type": "list(serial|socket)",
      "ser_path": "str",
      "address": "str?",
      "port": "int?"
    },
    "control_port": {
      "type": "list(serial|socket)",
      "ser_path": "str",
      "address": "str?",
      "port": "int?"
    },
    "ipark_server": {
      "address": "str",
      "username": "str?",
      "password": "str?"
    },
    "ipark_server_device": {
      "living_light": "bool",
      "vehicle": "bool",
      "delivery": "bool",
      "energy": "bool"
    },
    "mqtt": {
      "broker": "str",
      "port": "int",
      "username": "str?",
      "password": "str?",
      "prefix": "str",
      "discovery": "bool"
    }
  }
}
