{
  "name": "HDC BESTIN WallPad RS485 Addon",
  "version": "1.0.0",
  "slug": "bestin_wallpad",
  "description": "현대산업개발 베스틴 월패드용 애드온입니다.",
  "arch": [
    "armhf",
    "armv7",
    "aarch64",
    "amd64",
    "i386"
  ],
  "map": [
    "share:rw"
  ],
  "url": "https://github.com/harwin1/bestin-v1",
  "startup": "application",
  "boot": "auto",
  "uart": true,
  "options": {
    "rs485": {
      "retry_delay": 100,
      "retry_count": 20,
      "ipark_server_enabled": true,
      "ipark_server_scan": 300,
      "packet_log_enabled": false,
      "packet_log_time": 30
    },
    "energy_port": {
      "type": "socket",
      "ser_path": "/dev/ttyUSB0",
      "address": "192.168.1.1",
      "port": 8899
    },
    "control_port": {
      "type": "socket",
      "ser_path": "/dev/ttyUSB0",
      "address": "192.168.1.1",
      "port": 8899
    },
    "ipark_server": {
      "address": "59.7.0.1",
      "username": "username",
      "password": "password"
    },
    "ipark_server_device": {
      "living_light": true,
      "vehicle": true,
      "delivery": true,
      "energy": false
    },
    "file_name": {
      "packet_log": "/share/packet_log.txt"
    },
    "mqtt": {
      "broker": "192.168.1.1",
      "username": "username",
      "password": "password",
      "port": 1883,
      "topic_prefix": "bestin",
      "discovery_regist": true
    }
  },
  "schema": {
    "rs485": {
      "retry_delay": "int(0,300)",
      "retry_count": "int(0,50)",
      "ipark_server_enabled": "bool",
      "ipark_server_scan": "int(0,300)",
      "packet_log_enabled": "bool",
      "packet_log_time": "int(0,300)"
    },
    "energy_port": {
      "type": "list(serial|socket)",
      "ser_path": "str",
      "address": "str?",
      "port": "int?"
    },
    "control_port": {
      "type": "list(serial|socket)",
      "ser_path": "str",
      "address": "str?",
      "port": "int?"
    },
    "ipark_server": {
      "address": "str",
      "username": "str?",
      "password": "str?"
    },
    "ipark_server_device": {
      "living_light": "bool",
      "vehicle": "bool",
      "delivery": "bool",
      "energy": "bool"
    },
    "mqtt": {
      "broker": "str",
      "username": "str?",
      "password": "str?",
      "port": "int",
      "topic_prefix": "str",
      "discovery_regist": "bool"
    },
    "file_name": {
      "packet_log": "str"
    }
  }
}
