{
  "name": "BESTIN Wallpad with RS485",
  "version": "2022.11.20",
  "slug": "wallpad",
  "description": "베스틴 월패드용 애드온",
  "arch": [
    "armhf",
    "armv7",
    "aarch64",
    "amd64",
    "i386"
  ],
  "map": [
    "share:rw"
  ],
  "url": "https://github.com/harwin1/bestin.js",
  "startup": "application",
  "boot": "auto",
  "uart": true,
  "options": {
    "sendDelay": 80,
    "gapDelay": 30,
    "energy": {
      "type": "socket",
      "header": "Socket",

      "windowPort": "COM?",
      "rpiPort": "/dev/ttyUSB?",
      "baudrate": 9600,
      "bytesize": 8,
      "parity": "none",
      "stopbits": 1,

      "addr": "192.168.0.X",
      "port": 8899
    },
    "control": {
      "type": "socket",
      "header": "Socket",

      "windowPort": "COM?",
      "rpiPort": "/dev/ttyUSB?",
      "baudrate": 9600,
      "bytesize": 8,
      "parity": "none",
      "stopbits": 1,

      "addr": "192.168.0.X",
      "port": 8899
    },
    "smart": {
      "ennable": "off",

      "baudrate": 9600,
      "bytesize": 8,
      "parity": "none",
      "stopbits": 1,

      "windowPort_recv": "COM?",
      "rpiPort_recv": "/dev/ttyUSB?",

      "windowPort_send": "COM?",
      "rpiPort_send": "/dev/ttyUSB?"
    },
    "mqtt": {
      "broker": "mqtt broker",
      "username": "name",
      "password": "passwd",
      "receiveDelay": 5000,
      "prefix": "homenet"
    }
  },
  "schema": {
    "sendDelay": "int",
    "gapDelay": "int",
    "energy": {
      "type": "list(serial|socket)",
      "header": "list(Serial|Socket)",

      "windowPort": "str?",
      "rpiPort": "str?",
      "baudrate": "int?",
      "bytesize": "int?",
      "parity": "list(none|even|odd)?",
      "stopbits": "int?",
      
      "addr": "str?",
      "port": "int?"
    },
    "control":{
      "type": "list(serial|socket)",
      "header": "list(Serial|Socket)",

      "windowPort": "str?",
      "rpiPort": "str?",
      "baudrate": "int?",
      "bytesize": "int?",
      "parity": "list(none|even|odd)?",
      "stopbits": "int?",

      "addr": "str?",
      "port": "int?"
    },
    "smart": {
      "ennable": "list(on|off)",
      "baudrate": "int?",
      "bytesize": "int?",
      "parity": "list(none|even|odd)?",
      "stopbits": "int?",

      "windowPort_recv": "str?",
      "rpiPort_recv": "str?",

      "windowPort_send": "str?",
      "rpiPort_send": "str?"
    },    
    "mqtt": {
      "broker": "str",
      "username": "str",
      "password": "str",
      "receiveDelay": "int",
      "prefix": "str"
    },
    "customfile": "str?"
  }
}
