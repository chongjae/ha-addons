{
  "name": "BESTIN WallPad Controller",
  "version": "1.4.0",
  "slug": "bestin_wallpad",
  "description": "BESTIN WallPad for Home Assistant",
  "arch": [
    "armhf",
    "armv7",
    "aarch64",
    "amd64",
    "i386"
  ],
  "map": [
    "share:rw"
  ],
  "url": "https://github.com/harwin1/bestinRS485",
  "startup": "application",
  "boot": "auto",
  "uart": true,
  "options": {
    "sendDelay": 100,
    "maxRetry": 30,
    "energy": {
      "type": "socket",
      "serName": "/dev/ttyUSB0",
      "address": "192.168.0.x",
      "port": 8899
    }, 
    "control": {
      "type": "socket",
      "serName": "/dev/ttyUSB0",
      "address": "192.168.0.x",
      "port": 8899
    },
    "smart1": {
      "type": "socket",
      "serName": "/dev/ttyUSB0",
      "address": "192.168.0.x",
      "port": 8899
    },
    "smart2": {
      "type": "socket",
      "serName": "/dev/ttyUSB0",
      "address": "192.168.0.x",
      "port": 8899
    },
    "mqtt": {
      "broker": "192.168.0.x",
      "username": "id",
      "password": "pw",
      "port": 1883,
      "receiveDelay": 5000,
      "prefix": "bestin"
    }
  },
  "schema": {
  "sendDelay": "int",
  "maxRetry": "int",
    "energy": {
      "type": "list(serial|socket)",
      "serName": "str?",
      "address": "str?",
      "port": "int?"
    },
    "control": {
      "type": "list(serial|socket)",
      "serName": "str?",
      "address": "str?",
      "port": "int?"
    },
    "smart1": {
      "type": "list(serial|socket)",
      "serName": "str?",
      "address": "str?",
      "port": "int?"
    },
    "smart2": {
      "type": "list(serial|socket)",
      "serName": "str?",
      "address": "str?",
      "port": "int?"
    },
    "mqtt": {
      "broker": "str",
      "username": "str",
      "password": "str",
      "port": "int",
      "receiveDelay": "int",
      "prefix": "str"
    }
  }
}
